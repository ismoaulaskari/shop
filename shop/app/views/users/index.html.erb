<h1>Listing users</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Uid</th>
    <th>Oauth token</th>
    <th>Oauth expires at</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.provider %></td>
    <td><%=h user.uid %></td>
    <td><%=h user.oauth_token %></td>
    <td><%=h user.oauth_expires_at %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>