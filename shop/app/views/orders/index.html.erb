<h1>Listing orders</h1>

<table>
  <tr>
    <th>Sum</th>
    <th>Paymethod</th>
    <th>Name</th>
    <th>Address</th>
    <th>Zip</th>
    <th>City</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Created</th>
    <th>Notes</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.sum %></td>
    <td><%=h order.paymethod %></td>
    <td><%=h order.name %></td>
    <td><%=h order.address %></td>
    <td><%=h order.zip %></td>
    <td><%=h order.city %></td>
    <td><%=h order.country %></td>
    <td><%=h order.phone %></td>
    <td><%=h order.email %></td>
    <td><%=h order.created_at %></td>
    <td><%=h order.notes %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

