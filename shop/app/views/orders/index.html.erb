<h1>Listing orders</h1>

<table>
  <tr>
    <th>Tuotteet</th>
    <th>Kokonaishinta</th>
    <th>Maksutapa</th>
    <th>Nimi</th>
    <th>Katuosoite</th>
    <th>Postinro</th>
    <th>Kaupunki</th>
    <th>Maa</th>
    <th>Puhelin</th>
    <th>Sähköposti</th>
    <th>Luotu</th>
    <th>Status</th>
    <th>Muistiinpanot</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td>
      <% @order_items.each do |c| %>
      <br><%= link_to c, item_path(c.item_id) %>
    <% end %>
    </td>
    <td><%=h order.sum %></td>
    <td><%=h order.paymethod %></td>
    <td><%=h order.name %></td>
    <td><%=h order.address %></td>
    <td><%=h order.zip %></td>
    <td><%=h order.city %></td>
    <td><%=h order.country %></td>
    <td><%=h order.phone %></td>
    <td><%=h order.email %></td>
    <td><%=h order.created_at %></td>
    <td><%=h order.status %></td>
    <td><%=h order.notes %></td>
    <td>
       <% form_for order, :url => "/", :html => {:method => :post}  do |f| %>
        <%= f.submit 'VAHVISTA TILAUS' %>
      <% end %>
    </td>
    <!--<td><%= link_to 'Show', order %></td>-->
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

