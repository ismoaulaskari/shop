<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Discount</th>
    <th>Saldo</th>
    <th>Picurl</th>
    <th>Modified</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.name %></td>
    <td><%=h item.description %></td>
    <td><%=h item.price %></td>
    <td><%=h item.discount %></td>
    <td><%=h item.saldo %></td>
    <td><a href="../uploads/<%=h item.picurl %>"><img src="../uploads/<%=h item.picurl %>" width="120" /></a></td>
    <td><%=h item.modified %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
