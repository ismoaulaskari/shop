<% form_for @item, :html => {:multipart => true} do |f| %>  
<%= f.error_messages %> 
 
  <p> 
    <%= f.label :name %> *<br /> 
    <%= f.text_field :name %> 
  </p> 
  <p> 
    <%= f.label :category %> *<br /> 
    <% @category.each do |c| %>
      <br><%= f.radio_button :category_id, c.id %>
      <%= c.name %>
    <% end %>
  </p> 
  <p> 
    <%= f.label :description %> *<br /> 
    <%= f.text_field :description %> 
  </p> 
  <p> 
    <%= f.label :price %> <i>eur</i> *<br /> 
    <%= f.text_field :price %> 
  </p> 
  <p> 
    <%= f.label :discount %> <i>eur</i><br /> 
    <%= f.text_field :discount, :value =>'0' %> 
  </p> 
  <p> 
    <%= f.label :saldo %> *<br /> 
    <%= f.text_field :saldo, :value =>'1' %> 
  </p> 
  <p> 
    <%= f.label :picurl %><br /> 
    <%= f.file_field :picurl %> 
  </p> 
<!--  <p> 
    <%= f.label :modified %><br /> 
    <%= f.datetime_select :updated_at %> 
  </p> -->
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

